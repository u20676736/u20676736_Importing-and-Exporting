@model IEnumerable<ImportExportPractical.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customer</h2>

@using (Html.BeginForm("ImportStudents", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h4>Select an excel file containing valid student records:</h4>
    <input type="file" name="file" class="form-control-file" />
    <br />
    <button type="submit" class="btn btn-primary pull-right">Import</button>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            City
        </th>
        <th>
            Country
        </th>
        <th>
            Phone
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CustomerId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CustomerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId })
            </td>
            <td>

        </tr>
    }

</table>
